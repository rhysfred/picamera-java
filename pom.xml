<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.3.3</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>com.cyphersys.picamera</groupId>
    <artifactId>picamera</artifactId>
    <version>1.0.0</version>
    <name>Picamera for Java</name>
    <description>Raspberry Pi Camera Streaming with the Java FFM</description>
	<properties>
		<java.version>21</java.version>
        <build.dir>target</build.dir>
		<jar.file>${project.name}-${project.version}.jar</jar.file>
    	<spring-boot.repackage.skip>true</spring-boot.repackage.skip>
	</properties>
    <build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

</project>

